[user]
	name = Hugo Benichi
	email = hugobenichi@gmail.com

[core]
  editor = vim

[color]
	ui = auto

;[diff]
;  external = $HOME/git_icdiff.sh

[alias]
  s = status
  ss = status -sb
  br = branch
  aa = add -A
  cm = commit
  cma = commit --amend
  co = checkout

  df = diff
  df2 = diff --color --color-words --abbrev
  df3 = diff --color-words=.
  topdf = diff HEAD^ --word-diff
  laststat = show --stat HEAD

  rebi = rebase -i
  rebc = rebase --continue
  crp = cherry-pick

  ll = log -n10 --oneline
  llmore = log --oneline
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lldate = log --pretty=format:"%h%x09%an%x09%ad%x09%s"

  mybr = name-rev --name-only HEAD

  rom = rebase origin master
  pom = push origin master
  fta = fetch -a
